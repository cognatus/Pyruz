extends layout

block content
		#hiddenProfilePhoto.hidden_popup
			.pd_48
				.popblock
					.colhh1.secondary_color.shadow
						.pd_18(style="height: 24px;")
							.close_popup.close_icon.r_f
						.pd_18.title.white_text Editar Perfil
					form.colhh1.form_container(action="modificaInfo" method="POST" enctype="multipart/form-data")
						.pd_24
							.chn_pphoto.p_hidelem
								span#changePhoto(style='background-image: url("images/camera.png")')
								img#profilePhoto(src='profile_photos/#{datos[0]._id}.png')
								input#filePhoto(type="file" name="p_photo" accept='image/*' value='')
						.field_container
							.title Nombre(s)
							input(type="text" name="nombre" placeholder="Modifica tu nombre")
						.field_container
							.title Apellido(s)
							input(type="text" name="apellido" placeholder="Modifica tus apellidos")
						.field_container
							.title Usuario
							input(type="text" name="user" placeholder="Modifica tu nombre de Usuario")
						.field_container
							.title Correo
							input(type="email" name="email" placeholder="Modifica tu Correo")
						.field_container
							.title Contraseña
							input(type="password" name="password" placeholder="Modifica tu contraseña")
						.colhh1(style="height: 50px;margin-top: 32px;")
							.button.button_inco.r_f.tri_color Guardar Cambios
								input(type="submit" value="")
		#hiddenAddHuerto.hidden_popup
			.pd_48
				.popblock
					.colhh1.secondary_color
						.pd_18(style="height: 24px;")
							.close_popup.close_icon.r_f
						.pd_18.title.white_text Crear Nuevo Huerto
					form.colhh1.form_container(action="/crear_huerto" method="POST")
						.field_container
							.title Nombre
							input(type="text" name="nombre_huerto" placeholder="Añade un nombre")
						.field_container
							.field_container2
								.colhh2
									.title Filas
									select(type="text" name="filas" placeholder="Añade un numero de filas")
										-for (var i = 1; i < 10; i++) 
											option(value= i)= i
								.colhh2
									.title Columnas
									select.second(type="text" name="columnas" placeholder="Añade un nombre")
										-for (var i = 1; i < 10; i++) 
											option(value= i)= i
						.colhh1(style="height: 50px;margin-top: 32px;")
							.button.button_inco.r_f.tri_color Crear
								input(type="submit" value="")
		#hiddenEditarLote.hidden_popup
			.pd_48
				.popblock
					.colhh1.secondary_color.shadow
						.pd_18(style="height: 24px;")
							.close_popup.close_icon.r_f
						.pd_18.title.white_text Editar Planta
					.colhh1
						.pd_18
							.colhh2.title(style="vertical-align: middle;") Huerto: 
								span#nombreHuerto Huerto num 1
							.colhh2(style="vertical-align: middle;height: 50px;")
								.button.button_inco.bg_red.r_f Eliminar
					.colhh1.info_planta
						.pd_18
							.colhh2 Nombre Planta:
							#plantaNombre.colhh2(style="text-align: right;")
						.pd_18
							.colhh2 Luz Optima:
							#plantaLuz.colhh2(style="text-align: right;")
						.pd_18
							.colhh2 Humedad Optima:
							#plantaHum.colhh2(style="text-align: right;")
						.pd_18
