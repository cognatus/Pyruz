						.pd_18
							.colhh2 Posición en huerto:
							#plantaLugar.colhh2(style="text-align: right;")
					.colhh1
						.pd_18(style="height: 48px;")
							#editPlanta.circle_icon.r_f(style="background-image: url('images/edit2.png')")
					form#plantaHidden.colhh1.form_container(action="agregar_planta" method="POST")
						.colhh1
							.pd_18(style="font-weight: bold;font-size: 17px;padding: 6px 0 18px 0;") Modificar
						input#hiddenInput(type="hidden" value="" name="idHuerto")
						input#hiddenPos(type="hidden" value="" name="posPlanta")
						.field_container
							.title Nombre
							input(type="text" name="nombre_planta" placeholder="Añade un nombre")
						.field_container
							.title Humedad Optima
							input(type="text" name="humedad")
						.field_container
							.title Luz Optima
							input(type="text" name="temperatura")
						.field_container
							.title Temperatura Optima
							input(type="text" name="luz")
						.colhh1(style="height: 50px;margin-top: 32px;")
							.button.button_inco.r_f.tri_color Aceptar
								input(type="submit" value="")
